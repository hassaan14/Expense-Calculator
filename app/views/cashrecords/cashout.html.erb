<%= form_with model: @cashrecord, url: cashout_path do |form| %>
<h1>Cash Out Record Form</h1>
<div class="container">

  <div class="Form_selector">
    <%= form.label :category %><br>
    <%= form.select :category, ["Electricity Bill", "Sui-Gas Bill", "Education Fee", "Grocery", "Others"],
    class: "form_selector" %>
  </div>
  
  <div>
    <%= form.label :amount %><br>
    <%= form.number_field :amount %>
  </div>

  <div>
    <%= form.label :notes %><br>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.hidden_field :transaction_type, value: "cash_out" %>
  </div>

  <div>
    <%= form.submit "Submit Cash-out", class: "btn btn-success" %>
  </div>

<% end %>
</div>