<h1>Cash Records</h1>

<div class= "container-fluid">

  <div class="row">
    <div class="col">
      <h2>Cash-In Records</h2>
      <div class= "row">
              <div class= "col">
                <strong>Category:</strong>
              </div>
              <div class= "col">
                <strong>Amount:</strong>
              </div>
              <div class= "col">
                <strong>Notes:</strong>
              </div>
              <div class= "col">
              </div>
          </div><br>
        <% @cashrecords.each do |cash_record| %>
          <% if cash_record.transaction_type == "cash_in" %>
            <div class= "row">
              <div class= "col">
                <%= cash_record.category %>
              </div>
              <div class= "col">
                <%= cash_record.amount %>
              </div>
              <div class= "col">
                <%= cash_record.notes %>
              </div>
              <div class=" col ">
                <%= button_to "Delete", [cash_record.propertyrecord, cash_record], 
                method: :delete, data: { turbo_confirm: "Are you sure?" }, 
                class: "btn btn-danger" %><br>
              </div>
          </div>
        <% end %>  
      <% end %>
    </div>

    <div class="col">
        <h2>Cash-Out Records</h2>
        <div class= "row">
              <div class= "col">
                <strong>Category:</strong>
              </div>
              <div class= "col">
                <strong>Amount:</strong>
              </div>
              <div class= "col">
                <strong>Notes:</strong>
              </div>
              <div class= "col">
              </div>
          </div><br>
          <% @cashrecords.each do |cash_record| %>
            <% if cash_record.transaction_type == "cash_out" %>
              <div class= "row">
                <div class= "col">
                  <%= cash_record.category %>
                </div>
                <div class= "col">
                  <%= cash_record.amount %>
                </div>
                <div class= "col">
                  <%= cash_record.notes %>
                </div>
                <div class= "col">
                  <%= button_to "Delete", cashout_path( params: { id: cash_record.id} ), method: :delete, 
                  class: "btn btn-danger",
                  data: { turbo_confirm: "Are you sure?" } %><br>
              </div>
            </div>
            <% end %>  
          <% end %>  
    </div>
  </div>
</div>